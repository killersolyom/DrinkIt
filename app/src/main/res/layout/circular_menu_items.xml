<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.szugyi.circlemenu.view.CircleImageView
        android:id="@+id/home_start"
        android:layout_width="@dimen/circle_menu_item_size"
        android:layout_height="@dimen/circle_menu_item_size"
        android:background="@drawable/circle"
        android:elevation="@dimen/circle_menu_item_elevation"
        android:padding="@dimen/circle_menu_item_padding"
        android:src="@drawable/play" />

    <com.szugyi.circlemenu.view.CircleImageView
        android:id="@+id/home_settings"
        android:layout_width="@dimen/circle_menu_item_size"
        android:layout_height="@dimen/circle_menu_item_size"
        android:background="@drawable/circle"
        android:elevation="@dimen/circle_menu_item_elevation"
        android:padding="@dimen/circle_menu_item_padding"
        android:src="@drawable/settings" />

    <com.szugyi.circlemenu.view.CircleImageView
        android:id="@+id/home_exit"
        android:layout_width="@dimen/circle_menu_item_size"
        android:layout_height="@dimen/circle_menu_item_size"
        android:background="@drawable/circle"
        android:elevation="@dimen/circle_menu_item_elevation"
        android:padding="@dimen/circle_menu_item_padding"
        android:src="@drawable/quit" />

    <com.szugyi.circlemenu.view.CircleImageView
        android:id="@+id/home_info"
        android:layout_width="@dimen/circle_menu_item_size"
        android:layout_height="@dimen/circle_menu_item_size"
        android:background="@drawable/circle"
        android:elevation="@dimen/circle_menu_item_elevation"
        android:padding="@dimen/circle_menu_item_padding"
        android:src="@drawable/info" />

</merge>